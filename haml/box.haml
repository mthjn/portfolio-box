      .container
        .row
          %main.col-md-6{:role => "main"}
            #slimpanel
              %div
                %a.select_item{"data-item" => "p1"}
                  %img{:src => "img/food-50.jpg"}/
              %div
                %a.select_item{"data-item" => "p2"}
                  %img{:src => "img/berries-50.jpg"}/
