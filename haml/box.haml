                  %li
                    %b Terrassendielen
                    = succeed "Roggemann," do
                      %br/
                    %img.img-responsive{:src => "img/gl-logos1.png"}/
                  %li
                    %b Gartenmöbel
                    = succeed "Stern," do
                      %br/
                  %img.img-responsive{:src => "img/gl-logos2.png"}/
                  %li
